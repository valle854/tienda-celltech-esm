# ============================================

# Servidor
PORT=3000
NODE_ENV=development

# Base de datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=tienda_online
DB_USER=tienda_app
DB_PASSWORD=PasswordSeguro123!

# Configuración de seguridad
JWT_SECRET=tu_jwt_secret_aqui_cambiar_en_produccion
